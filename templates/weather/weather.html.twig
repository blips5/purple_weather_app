{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
{% endblock %}

{% block javascripts %}
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
{% endblock %}

{% block title %}Weather{% endblock %}

{% block body %}
<div class="container col-md-8">
    <h3 class="text-center">Check The Weather</h3>
    <br>
        <div class="col-md-6 offset-md-2">
            <form  class="form-inline" action="" method="post" name="weatherForm">
                <div class="form-group">
                    <lable for="location">Enter a UK City</lable>
                    <input  id="location" 
                        class="form-control" 
                        name="location"
                        type="text"
                        max-lenth="35"
                        placeholder="Manchester"
                        aria-describedby="weatherLoocation"
                        required="true" 
                        value="" 
                        />                       
                    <button class="btn btn-secondary" type="submit">Check my Luck</button>
                </div>
            </form>
        </div>
    <div class="col text-center"> 
        <label for="weatherTable">
            <h3>{% if errorMsg %}{{errorMsg}}<br>{% endif %}{{ location }}</h3>
        </label>
        <table class="table table-striped" name="weatherTable">
            <thead>
                <th scope="col">Provider Name</th>
                <th scope="col">Today's High</th>
                <th scope="col">Today's Low</th>
                <th scope="col">Summary</th>
            </thead>
            <tbody>
            <tr>
                <td>{{ providerName }}</td>
                <td>{{ todaysHigh }}</td>
                <td>{{ todaysLow }}</td>
                <td>{{ summary }}</td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
{% endblock %}