<h3>Check The Weather</h3>

<form action="" method="post" name="weatherForm">
	<lable for="location">Enter a UK City</lable>
	<input id="location" name="location"type="text" max-lenth="35" placeholder="Manchester"value="" />
	<input type="submit" value="Check my Luck" />
</form>
<br>
<table class="table">
	<thead>
		<th>Provider Name</th>
		<th>Today's High</th>
		<th>Today's Low</th>
		<th>Summary</th>
	</thead>
	<tr>
		<td>{{ providerName }}</td>
		<td>{{ todaysHigh }}</td>
		<td>{{ todaysLow }}</td>
		<td>{{ summary }}</td>
	</tr>
</table>